@model Techcareer.Web.Models.User
@{
    ViewData["Title"] = "Login Page";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<br />
<strong style="color:red;">@TempData["Message"]</strong>
<br />

<div class="container">
    <div class="row">
        <div class="col-5">
            <a asp-action="Index" asp-controller="Register" class="btn btn-success float-end">Register Now !</a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <form asp-action="LoginUser" asp-controller="Home" method="post" role="form">
                <h4>Login Page</h4>

                <div class="form-group">
                    <label asp-for="UserName" class="col-md-5 control-label"></label>
                    <div class="col-md-5">
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="col-md-5 control-label"></label>
                    <div class="col-md-5">
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-4 mt-2 col-md-4">
                        <input type="submit" class="btn btn-primary btn-lg" value="Login" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<br /><br />


@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}